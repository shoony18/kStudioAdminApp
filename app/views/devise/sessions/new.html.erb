<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="grid">
      <br>
      <br>
      <br>
    <div id="login">

      <h2><span class="fontawesome-lock"></span>K-Studio管理画面</h2>

      <form action="#" method="POST">

        <fieldset>

          <p><label for="email">メールアドレス</label></p>
<!--          <p><input type="email" id="email" placeholder="mail@address.com"></p>-->
          <p><%= f.email_field :email, autofocus: true, autocomplete: "email" %></p>

          <p><label for="password">パスワード</label></p>
<!--          <p><input type="password" id="password" placeholder="password"></p>-->
          <p><%= f.password_field :password, autocomplete: "current-password" %></p>

          <br><div class="submit"><%= f.submit "ログイン",style:"background: #33cc77;color: #fff;" %></div>

        </fieldset>

      </form>

    </div> <!-- end login -->

  </div>
<% end %>

